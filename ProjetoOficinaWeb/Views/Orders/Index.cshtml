@model IEnumerable<ProjetoOficinaWeb.Data.Entities.Order>
@{
    ViewData["Title"] = "Index";
}
<h2>Orders</h2>


<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @if (this.User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.User.FullName)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.OrderDateLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lines)
            </th>    
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (this.User.IsInRole("Admin"))
                {
                    <th>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </th>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Lines)
                </td>
                <td>
                    <a asp-action="Schedule" asp-route-id="@item.Id" class="btn btn-info" id="btnSchedule">Schedule</a>
                    <a asp-action="Schedule" asp-route-id="@item.Id" class="btn btn-danger" id="btnSchedule">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
